<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpensesActivity"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="Expenses"
            android:textSize="50dp"
            />

        <EditText
            android:id="@+id/edittext_number_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_marginTop="20dp"

            android:inputType="number" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/onebath"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/custom_button"
                android:backgroundTint="#FFC107"
                android:text="1"
                android:textSize="30dp"
                />

            <Button
                android:id="@+id/fivebath"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/onebath"
                android:backgroundTint="#FFC107"
                android:background="@drawable/custom_button"
                android:text="5"
                android:textSize="30dp" />

            <Button
                android:id="@+id/tenbath"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/onebath"
                android:background="@drawable/custom_button"
                android:backgroundTint="#FFC107"
                android:text="10"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/twentybath"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/dark_green"
                android:text="20"
                android:textSize="30dp" />

            <Button
                android:id="@+id/fiftybath"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/onebath"
                android:backgroundTint="@color/dark_green"
                android:text="50"
                android:textSize="30dp" />

            <Button
                android:id="@+id/onehundredbath"
                android:layout_width="10dp"
                android:layout_height="80dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/onebath"
                android:backgroundTint="@color/dark_green"
                android:text="100"
                android:textSize="30dp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/Back"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:backgroundTint="#7D8181"
                android:text="Back"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <Button
                android:id="@+id/specify"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/onebath"
                android:text="specify"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:backgroundTint="@color/light_blue"/>

            <Button
                android:id="@+id/Submit"
                android:layout_width="10dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@id/onebath"
                android:backgroundTint="@color/lime"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="15dp" />


        </TableRow>




    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>